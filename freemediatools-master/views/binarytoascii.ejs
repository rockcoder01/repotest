<%-include('./partials/head'); %>
  <body>
    <%-include('./partials/navbar'); %>
      <div class="container">
          <h1 class="text-center">
              Binary to ASCII Converter Online
          </h1>
            <div class="form-group">
		<label for="binary">Binary Code:</label>
                <input type="text" class="form-control" placeholder="Enter Binary" id="input" required>
            </div>
            <div class="form-group">
                <button id="button" class="btn btn-block btn-danger">
                    Convert to ASCII
                </button>
            </div>
	    <div class="form-group">
		<label for="string">Output:</label>
                <input type="text" class="form-control" placeholder="Result" id="output"/>
            </div>
        
        <br><br>
        <%-include('./partials/services');%>
        <%-include('./partials/jumbotron');%>
      </div>
</body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
$("#button").click(function(){

var input = $("#input").val()

$("#output").val(binarytoascii(input))


})

function binarytoascii(input){
var result = "";
		var arr = input.match(/.{1,8}/g);
		for (var i = 0; i < arr.length; i++) {
			result += String.fromCharCode(parseInt(arr[i], 2).toString(10));
		}
		return result;

}
</script>
</html>