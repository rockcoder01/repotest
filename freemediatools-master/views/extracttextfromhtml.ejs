<%-include('./partials/head'); %>
  <body>
    <%-include('./partials/navbar'); %>
      <div class="container">
          <h1 class="text-center">
              Extract Text From HTML Online
          </h1>
            <div class="form-group">
                <label for="html">Enter HTML:</label>
                <textarea cols="20" rows="10" class="form-control" placeholder="Enter HTML" id="text" required></textarea>
            </div>
            <div class="form-group">
                <button id="button" class="btn btn-block btn-danger">
                    Extract Text
                </button>
            </div>
            <div class="form-group">
		<label for="output">Output Text:</label>
                <textarea cols="20" rows="10" class="form-control" placeholder="Output Text" id="code"></textarea>
            </div>

    
         
        <br><br>
        <%-include('./partials/services');%>
        <%-include('./partials/jumbotron');%>
      </div>
</body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script>
  $("#button").click(function(){
   var input = $("#text").val()
   console.log(input)
   var output = extractContent(input)
   $("#code").html(output)
})

function extractContent(s) {
  var span = document.createElement('span');
  span.innerHTML = s;
  return span.textContent || span.innerText;
};	
</script>
</html>