<%-include('./partials/head'); %>
  <body>
    <%-include('./partials/navbar'); %>
      <div class="container">
          <h1 class="text-center">
              JSON Stringify Tool Online
          </h1>
            <div class="form-group">
		<label for="code">Enter Text:</label>
                    <textarea class="form-control" name="" id="text" placeholder="Enter Code" cols="20" rows="10" required></textarea>

            </div>
            <div class="form-group">
                <button id="button" class="btn btn-block btn-danger">
                    Stringify Text 
                </button>
            </div>
	    <div class="form-group">
		<label for="string">Output:</label>
                <textarea class="form-control" name="" id="output" placeholder="Enter Code" cols="20" rows="10"></textarea>
            </div>
        
        <br><br>
        <%-include('./partials/services');%>
        <%-include('./partials/jumbotron');%>
      </div>
</body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>

    $("#button").click(function(){
       var text = $("#text").val()
       $("#output").val(JSON.stringify(text))
		
})
</script>
</html>