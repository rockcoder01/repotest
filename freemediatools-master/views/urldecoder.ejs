<%-include('./partials/head'); %>
  <body>
    <%-include('./partials/navbar'); %>
      <div class="container">
          <h1 class="text-center">
              URL Decoder Online
          </h1>
            <div class="form-group">
                <label for="url">Enter URL:</label>
                <textarea name="" class="form-control" id="url" cols="30" rows="10"></textarea>
            </div>
            <div class="form-group">
                <label for="result">Decoded URL:</label>
                <textarea class="form-control" name="" id="result" cols="30" rows="10"></textarea>
            </div>
            <div class="form-group">
                <button onclick="decodeurl()" class="btn btn-block btn-danger">
                    Decode URL
                </button>
            </div>
        </form>
        <br><br>
        <%-include('./partials/services');%>
        <%-include('./partials/jumbotron');%>
      </div>
</body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script>
      var url = ""
      $("#url").change(function(){

          $("#result").html("")

          url = $(this).val()
      })

      function decodeurl(){
          $("#result").html("")

          $("#result").html(decodeURI(url))
      }
  </script>
</html>