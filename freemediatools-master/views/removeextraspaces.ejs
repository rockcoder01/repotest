<%-include('./partials/head'); %>
  <body>
    <%-include('./partials/navbar'); %>
      <div class="container">
          <h1 class="text-center">
              Remove Extra Spaces From String Online
          </h1>
          
            <div class="form-group">
		<label for="string">Input Text:</label>
                <textarea cols="20" rows="10" class="form-control" type="file" name="text" placeholder="Enter Text" id="inputtextarea" required></textarea>
            </div>
            <div class="form-group">
                <button id="button" class="btn btn-block btn-danger">
                    Remove Extra Spaces
                </button>
            </div>
	    <div class="form-group">
		<label for="string">Output Text:</label>
                <textarea cols="20" rows="10" class="form-control" type="file" name="outputtext" placeholder="Output Text" id="outputtextarea" required></textarea>
            </div>
        
        <br><br>
        <%-include('./partials/services');%>
        <%-include('./partials/jumbotron');%>
      </div>
</body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>

jQuery(function ($) {
    $("#button").on("click", function () {
        var str = $("#inputtextarea").val()
        $("#outputtextarea").val(removeMoreThanOneSpace(str))
    });
})

function removeMoreThanOneSpace(str) {
    String.prototype.removeSpaceByLength=function(index, length) {
        console.log("in remove", this.substr(0, index));
        return this.substr(0, index) + this.substr(length);
    }
    for(let i  = 0; i < str.length-1; i++) {
        if(str[i] === " " && str[i+1] === " ") {
            str = str.removeSpaceByLength(i, i+1);
            i = i-1;
        }
    }
    return str;
}

</script>
