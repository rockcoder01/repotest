<%-include('./partials/head'); %>
  <body>
    <%-include('./partials/navbar'); %>
      <div class="container">
          <h1 class="text-center">
              Text to Image Online
          </h1>
            <form method="post" action="/texttoimage">
            <div class="form-group">
                <label for="text">Enter Text:</label>
                <textarea id="" class="form-control" cols="30" rows="10" name="text" required></textarea>
            </div>
            <div class="form-group">
                <label for="width">Width of Image:</label>
                <input class="form-control" name="width" type="number" value="720" id="width" required>
            </div>
            <div class="form-group">
                <label for="height">Height of Image:</label>
                <input class="form-control" name="height" type="number" value="30" id="height" required>
            </div>
            <div class="form-group">
                <label for="height">Font Size of Text:</label>
                <input class="form-control" type="number" name="fontsize" value="18" id="height" required>
            </div>
            <div class="form-group">
                <label for="textcolor">Text Color:</label>
                <input class="form-control" type="color" id="textcolor" name="textcolor" value="#ffffff">
            </div>
            <div class="form-group">
                <label for="backgroundcolor">Background Color:</label>
                <input class="form-control" type="color" id="backgroundcolor" name="backgroundcolor" value="#000000">
            </div>
            <div class="form-group">
                <button class="btn btn-danger btn-block">
                    Download Image
                </button>
            </div>

        </form>
        <br><br>
        <%-include('./partials/services');%>
        <%-include('./partials/jumbotron');%>
      </div>
</body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</html>