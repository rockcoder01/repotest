<%-include('./partials/head'); %>
  <body>
    <%-include('./partials/navbar'); %>
      <div class="container">
          <h1 class="text-center">
             Currency Converter Online
          </h1>
          <form action="/currencyconverter" method="post">
            <div class="form-group">
                 <label for="from">From:</label>
                 <select class="form-control" name="from" id="">
                    <% for(let i=0;i<codes.length;i++){ %>
                    <%if(i==23){%>
        <option value="<%=codes[i].code%>" selected><%=codes[i].code%> - <%=codes[i].currency%></option>
        <%}else{%>
        <option value="<%=codes[i].code%>"><%=codes[i].code%> - <%=codes[i].currency%></option>
        <%}%>
      <% } %>
                 </select>
            </div>

            <div class="form-group">
                 <label for="amount">Amount:</label>
                 <input required class="form-control" type="number" name="amount" value="1" id=""/>
            </div>

            <div class="form-group">
                 <label for="to">To:</label>
                 <select class="form-control" name="to" id="">
                    <%for(let i =0;i<codes.length;i++){%>
                       <%if(i==29){%>
        <option value="<%=codes[i].code%>" selected><%=codes[i].code%> - <%=codes[i].currency%></option>
        <%}else{%>
        <option value="<%=codes[i].code%>"><%=codes[i].code%> - <%=codes[i].currency%></option>
        <%}%>
      <%}%>
                 </select>
            </div>
            <div class="form-group">
                <button class="btn btn-block btn-danger">
                    Convert Currency
                </button>
            </div>
            <div class="form-group">
                <label for="result">Result:</label>
                <input class="form-control" type="text" value="<%=response%>" />
            </div>
        </form>
        <br><br>
        <%-include('./partials/services');%>
        <%-include('./partials/jumbotron');%>
      </div>
</body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</html>