.wrapper
  .carousel
    - emojis = [ ["🐳", "spouting whale", "U+1F433	"], 
                 ["🐋", "whale", "U+1F40B	"], 
                 ["🐬", "dolphin", "U+1F42C	"], 
                 ["🐟", "fish", "U+1F41F	"], 
                 ["🐠", "tropical fish", "U+1F420	"], 
                 ["🐡", "blowfish", "U+1F421	"], 
                 ["🦈", "shark", "U+1F988	"], 
                 ["🐙", "octopus", "U+1F419	"], 
                 ["🐚", "spiral shell", "U+1F41A	"] ]
    
    - emojis.each do |i|
      .carousel__item
        .carousel__item-head
          #{i[0]}
        .carousel__item-body
          %p.title #{i[1]}
          %p Unicode: #{i[2]}